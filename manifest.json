{
  "manifest_version": 3,
  "name": "ElevenLabs TTS Reader",
  "version": "1.0",
  "description": "Read web page content using ElevenLabs Text-to-Speech API",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}